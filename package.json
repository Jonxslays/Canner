{
  "name": "canner",
  "displayName": "Canner",
  "description": "A VSCode extension for creating reusable text blocks.",
  "version": "0.1.0",
  "engines": {
    "vscode": "^1.5.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "onView:canner-sidebar",
    "onCommand:canner.cannedMain",
    "onCommand:canner.cannedAdd",
    "onCommand:canner.cannedEdit",
    "onCommand:canner.cannedDelete",
    "onCommand:canner.refreshWebview",
    "onCommand:canner.testView"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "viewsContainers": {
      "activitybar": [
        {
          "id": "canner-sidebar-view",
          "title": "Canner",
          "icon": "frontend/icon.svg"
        }
      ]
    },
    "views": {
      "canner-sidebar-view": [
        {
          "type": "webview",
          "id": "canner-sidebar",
          "name": "Canner",
          "icon": "frontend/icon.svg",
          "contextualTitle": "Canner"
        }
      ]
    },
    "commands": [
      {
        "command": "canner.cannedMain",
        "title": "Get a Can",
        "category": "Canner"
      },
      {
        "command": "canner.cannedAdd",
        "title": "Add a Can",
        "category": "Canner"
      },
      {
        "command": "canner.cannedEdit",
        "title": "Edit a Can",
        "category": "Canner"
      },
      {
        "command": "canner.cannedDelete",
        "title": "Delete a Can",
        "category": "Canner"
      },
      {
        "command": "canner.refreshWebview",
        "title": "Refresh a webview",
        "category": "Canner"
      },
      {
        "command": "canner.testView",
        "title": "Test basic tab webview",
        "category": "Canner"
      }
    ]
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "concurrently \"rollup -c -w\" \"tsc -watch -p ./\"",
    "pretest": "npm run compile && npm run lint",
    "lint": "eslint src --ext ts"
  },
  "devDependencies": {
    "@rollup/plugin-commonjs": "^21.0.1",
    "@rollup/plugin-node-resolve": "^13.1.3",
    "@rollup/plugin-typescript": "^8.3.0",
    "@tsconfig/svelte": "^3.0.0",
    "@types/glob": "^7.2.0",
    "@types/mocha": "^9.0.0",
    "@types/node": "14.x",
    "@types/vscode": "^1.64.0",
    "@typescript-eslint/eslint-plugin": "^5.9.1",
    "@typescript-eslint/parser": "^5.9.1",
    "@vscode/test-electron": "^2.0.3",
    "concurrently": "^7.0.0",
    "eslint": "^8.6.0",
    "glob": "^7.2.0",
    "mocha": "^9.1.3",
    "rollup": "^2.3.4",
    "rollup-plugin-svelte": "^6.0.0",
    "rollup-plugin-terser": "^7.0.2",
    "svelte": "^3.46.4",
    "svelte-check": "^2.4.2",
    "svelte-preprocess": "^4.10.2",
    "typescript": "^4.5.4"
  }
}
